/**index.wxss**/
.container{
    margin: 0;
    padding: 0;
    background: #F4F4F4;
}
.search-box{
    width: 100%;
    height: 60rpx;
    padding-bottom: 20rpx;
    text-align: center;
    color: #e5e5e5;
    background: #fff;
}
.nav-box{
    width: 100%;
    padding-bottom: 30rpx;
    background: #fff;
}
.btn-area{
    width: 100%;
    display: flex;
    flex-direction: row;
}
.btn-area:nth-child(2){
    padding-top: 14rpx;
}
.nav-item{
    width: 20%;
    flex: 1;
    text-align: center;
    font-size: 24rpx;
}
.icon-img{
    width: 94rpx;
    height: 94rpx;
    margin: 0 auto;
}

/**nearby*/
.nearby-shop{
    width: 100%;
    background: #fff;
    margin-top: 16rpx;
}
.nearby-title{
    width: 100%;
    height: 48rpx;
    font-size: 32rpx;
    line-height: 48rpx;
    text-align: center;
    padding-top: 32rpx;
}
.nearby-title-word{
    display: inline;
    font-weight: bold;
}

.nearby-item{
    position: relative;
    padding-top: 32rpx;
    padding-bottom: 32rpx;
    padding-left: 20rpx;
}
.nearby-img{
    position: absolute;
    left: 20rpx;
    top: 32rpx;
    width:168rpx;
    height: 126rpx;
    margin-right: 12rpx;
    border: 1px solid #E4E4E4
}
.nearby-info{
    position: relative;
    top: -10rpx;
    margin-left: 184rpx;
}
.nearby-name{
    height: 42rpx;
    font-size: 32rpx;
    line-height: 42rpx;
    margin-right: 30rpx;
}
.nearby-mid-line{
    height: 46rpx;
    line-height: 46rpx;
    margin-right: 30rpx;
    color: #656565;
}
.star-box{
    margin-top: 12rpx;
}
.star-item{
    background: url(https://xs01.meituan.net/waimai_i/img/sprite/newstars.ae33dbae.png) no-repeat;
    background-size: cover;
    width: 20rpx;
    height: 20rpx;
    float: left;
    margin-right: 8rpx;
    background-position: 0 0;
}
.shop-line{
    height: 32rpx;
    margin-top: 6rpx;
    font-size: 24rpx;
    margin-right: 30rpx;
    color: #656565;
}
.shop-line-right{
    background: #FFD161;
    height: 30rpx;
    line-height: 30rpx;
    margin-top: 1rpx;
    font-size: 20rpx;
    color: #656565;
    padding:  0 12rpx;
}